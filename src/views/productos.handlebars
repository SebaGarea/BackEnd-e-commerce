<div class="productos-container">
  <h1 class="titulo-principal">Catálogo de Productos</h1>

  <div class="productos-grid">
    {{#each productos}}
      <div class="producto-card">
        {{#if this.thumbnail}}
          <img
            src="/img/{{this.thumbnail}}"
            alt="{{this.title}}"
            class="producto-imagen"
          />
        {{else}}
          <img
            src="/img/no-image.png"
            alt="Sin imagen"
            class="producto-imagen"
          />
        {{/if}}

        <div class="producto-info">
          <h2 class="producto-titulo">{{this.title}}</h2>
          <p class="producto-codigo">Código: {{this.code}}</p>
          <p class="producto-precio">${{this.price}}</p>

          <div class="producto-acciones">
            <a href="/products/{{this.code}}" class="btn btn-ver">Ver detalle</a>
            <a href="/products/editar/{{this.code}}"class="btn btn-ver">Editar</a>
          </div>
          <div>
            <form action="/products/{{this._id}}?_method=DELETE"method="POST"class="form-eliminar"            >
              <button type="submit" class="btn btn-eliminar">Eliminar</button>
            </form>
          </div>
        </div>
      </div>
    {{else}}
      <p class="no-productos">No hay productos disponibles</p>
    {{/each}}
  </div>




<div class="paginacion">
    {{#if hasPrevPage}}
      <a href="{{prevLink}}" class="btn btn-ver">← Anterior</a>
    {{/if}}

    <span class="pagina-actual">
      Página {{currentPage}} de {{totalPages}}
    </span>

    {{#if hasNextPage}}
      <a href="{{nextLink}}" class="btn btn-ver">Siguiente →</a>
    {{/if}}
  </div>

  <div class="acciones-principales">
    <a href="/products/nuevo" class="btn btn-agregar">Agregar Nuevo Producto</a>
  </div>
</div>